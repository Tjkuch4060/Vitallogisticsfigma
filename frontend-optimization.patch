+import React, { lazy, Suspense } from 'react';
+import { LoadingSpinner } from './ui/PageLoadingSpinner';
+
+/**
+ * Lazy-loaded Recharts wrapper
+ * Charts are heavy, so we lazy load them to reduce initial bundle size
+ */
+
+// Lazy load Recharts components
+const RechartsComponents = lazy(() => import('recharts'));
+
+interface LazyBarChartProps {
+  data: any[];
+  dataKey: string;
+  xAxisKey: string;
+  height?: number;
+}
+
+export function LazyBarChart({ data, dataKey, xAxisKey, height = 350 }: LazyBarChartProps) {
+  return (
+    <Suspense fallback={<LoadingSpinner size="lg" />}>
+      <LazyBarChartInner
+        data={data}
+        dataKey={dataKey}
+        xAxisKey={xAxisKey}
+        height={height}
+      />
+    </Suspense>
+  );
+}
+
+// Inner component that actually uses Recharts
+function LazyBarChartInner({ data, dataKey, xAxisKey, height }: LazyBarChartProps) {
+  // Dynamic import handled by lazy() above
+  const { BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer } =
+    require('recharts');
+
+  return (
+    <ResponsiveContainer width="100%" height={height}>
+      <BarChart data={data}>
+        <CartesianGrid strokeDasharray="3 3" stroke="#e2e8f0" />
+        <XAxis
+          dataKey={xAxisKey}
+          tick={{ fill: '#64748b', fontSize: 12 }}
+          stroke="#cbd5e1"
+        />
+        <YAxis
+          tick={{ fill: '#64748b', fontSize: 12 }}
+          stroke="#cbd5e1"
+        />
+        <Tooltip
+          contentStyle={{
+            backgroundColor: '#ffffff',
+            border: '1px solid #e2e8f0',
+            borderRadius: '8px',
+            boxShadow: '0 4px 6px -1px rgb(0 0 0 / 0.1)'
+          }}
+          cursor={{ fill: '#f1f5f9' }}
+        />
+        <Bar
+          dataKey={dataKey}
+          fill="#10b981"
+          radius={[8, 8, 0, 0]}
+        />
+      </BarChart>
+    </ResponsiveContainer>
+  );
+}
